{
  "name": "fidoo-blog",
  "version": "1.0.0",
  "private": true,
  "description": "企业级博客系统 - Monorepo 架构",
  "author": "Fidoo Team",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "dev:service": "turbo run dev --filter=@fidoo-blog/service",
    "dev:web": "turbo run dev --filter=@fidoo-blog/web",
    "dev:admin": "turbo run dev --filter=@fidoo-blog/admin",
    "dev:shared": "turbo run dev --filter=@fidoo-blog/shared",
    "build": "turbo run build",
    "build:service": "turbo run build --filter=@fidoo-blog/service",
    "build:web": "turbo run build --filter=@fidoo-blog/web",
    "build:admin": "turbo run build --filter=@fidoo-blog/admin",
    "build:shared": "turbo run build --filter=@fidoo-blog/shared",
    "start": "turbo run start",
    "start:service": "turbo run start --filter=@fidoo-blog/service",
    "start:web": "turbo run start --filter=@fidoo-blog/web",
    "start:admin": "turbo run start --filter=@fidoo-blog/admin",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md,yml,yaml}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md,yml,yaml}\" --ignore-path .prettierignore",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:all": "turbo run clean && rm -rf node_modules **/node_modules **/.next **/dist **/build",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "migration:generate": "cd service && pnpm migration:generate",
    "migration:run": "cd service && pnpm migration:run",
    "migration:revert": "cd service && pnpm migration:revert",
    "seed": "cd service && pnpm seed",
    "setup": "chmod +x scripts/*.sh && ./scripts/setup.sh",
    "release": "./scripts/release.sh",
    "deploy": "./scripts/deploy.sh docker production",
    "deploy:pm2": "./scripts/deploy.sh pm2 production",
    "config:ip": "./scripts/config-ip.sh"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  }
}
