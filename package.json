{
  "name": "fidoo-blog",
  "version": "1.0.0",
  "private": true,
  "description": "企业级博客系统 - Monorepo 架构",
  "author": "Fidoo Team",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@fidoo-blog/web",
    "dev:admin": "turbo run dev --filter=@fidoo-blog/admin",
    "dev:service": "turbo run dev --filter=@fidoo-blog/service",
    "dev:app": "turbo run dev --filter=@fidoo-blog/app",
    "dev:frontend": "turbo run dev --filter=@fidoo-blog/web --filter=@fidoo-blog/admin",
    "dev:all": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:prod": "turbo run build --filter=@fidoo-blog/web --filter=@fidoo-blog/admin --filter=@fidoo-blog/service",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:ports": "./scripts/kill-all-ports.sh",
    "check:services": "./scripts/check-services.sh",
    "start:services": "./scripts/start-services.sh",
    "init:db": "./scripts/init-database.sh",
    "prepare": "husky install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "shared:build": "pnpm --filter @fidoo-blog/shared build",
    "shared:dev": "pnpm --filter @fidoo-blog/shared dev",
    "service:dev": "pnpm --filter @fidoo-blog/service dev",
    "service:build": "pnpm --filter @fidoo-blog/service build",
    "service:start": "pnpm --filter @fidoo-blog/service start:prod",
    "service:seed": "pnpm --filter @fidoo-blog/service seed",
    "service:seed:large": "pnpm --filter @fidoo-blog/service seed:large",
    "service:migration:run": "pnpm --filter @fidoo-blog/service migration:run",
    "web:dev": "pnpm --filter @fidoo-blog/web dev",
    "admin:dev": "pnpm --filter @fidoo-blog/admin dev",
    "app:dev": "pnpm --filter @fidoo-blog/app dev"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  }
}
